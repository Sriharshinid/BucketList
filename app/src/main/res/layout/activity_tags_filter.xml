<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bucketlist.TagsFilter">

    <CheckBox
        android:id="@+id/CheckBox0"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Personal Growth"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_alignParentLeft="true"
        />

    <CheckBox
        android:id="@+id/CheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:text="Food/Drink "
        android:layout_alignBaseline="@id/CheckBox0"
        android:layout_toRightOf="@+id/CheckBox3"
        android:layout_toEndOf="@+id/CheckBox3" />

    <CheckBox
        android:id="@+id/CheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:layout_alignBaseline="@id/CheckBox0"
        android:layout_toRightOf="@id/CheckBox1"
       />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckBox3"
        android:paddingTop="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Entertainment"
        android:fontFamily="serif-monospace"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/CheckBox0"
        android:layout_alignParentLeft="true"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckBox6"
        android:paddingTop="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Relationship"
        android:fontFamily="serif-monospace"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/CheckBox3"
        android:layout_alignParentLeft="true"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckBox9"
        android:paddingTop="8dp"
        android:text="Health/Fitness"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/CheckBox6"
        android:layout_alignParentLeft="true"
        />
    <CheckBox
        android:id="@+id/CheckBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CheckBox3"
        android:layout_alignLeft="@id/CheckBox1"
        android:fontFamily="serif-monospace"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Events" />
    <CheckBox
        android:id="@+id/CheckBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CheckBox6"
        android:layout_alignLeft="@id/CheckBox1"
        android:fontFamily="serif-monospace"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Family" />
    <CheckBox
        android:id="@+id/CheckBox10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CheckBox9"
        android:layout_alignLeft="@id/CheckBox1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:text="Creative" />

    <CheckBox
        android:id="@+id/CheckBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Career"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:layout_below="@+id/CheckBox1"
        android:layout_alignLeft="@+id/CheckBox8"
        android:layout_alignStart="@+id/CheckBox8" />
    <CheckBox
        android:id="@+id/CheckBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charity"
        android:layout_alignBaseline="@+id/CheckBox7"
        android:layout_alignBottom="@+id/CheckBox7"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:layout_alignLeft="@id/CheckBox2"
         />
    <CheckBox
        android:id="@+id/CheckBox11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:fontFamily="serif-monospace"
        android:layout_below="@+id/CheckBox8"
        android:layout_alignLeft="@+id/CheckBox8"
        android:layout_alignStart="@+id/CheckBox8" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchTagsText"
        android:layout_above="@id/CheckBox1"
        android:text="Filter by tags: "
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#01579B"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingBottom="16dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#FFF176"
        android:text="Search"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:onClick="onSearchTags"
        tools:ignore="HardcodedText" />


</RelativeLayout>
