<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    tools:context="com.example.android.bucketlist.DetailActivity">



    <Button
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:id="@+id/updateButton"
        android:background="#81C784"
        android:text="Update"
        android:onClick="onUpdate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Delete"
        android:onClick="onDelete"
        android:background="#E57373"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityName"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#01579B"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        />

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priorityLevel"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activityName"
        android:paddingTop="8dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        />

    <TextView
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:id="@+id/costText"
        android:layout_below="@id/priorityLevel"
        android:paddingTop="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"

        />

    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:id="@+id/durationDisp"
        android:layout_below="@id/priorityLevel"
        android:paddingTop="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagsDisp"
        android:layout_below="@id/durationDisp"
        android:paddingTop="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionDisp"
        android:layout_below="@id/tagsDisp"
        android:paddingTop="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"

        />





</RelativeLayout>
