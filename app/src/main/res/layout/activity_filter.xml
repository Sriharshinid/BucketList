<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bucketlist.filter"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Filter"
        android:text="Filter By:"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#01579B"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Filter"
        android:orientation="vertical"
       >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/filterName"
            android:text="Name"
            android:fontFamily="serif-monospace"
            android:background="#FFF59D"
            android:textStyle="bold"
            android:onClick="nameFilter"
            android:layout_marginBottom="4dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/filterCost"
            android:text="Cost"
            android:fontFamily="serif-monospace"
            android:background="#FFF59D"
            android:textStyle="bold"
            android:onClick="costFilter"
            android:layout_marginBottom="4dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/filterTime"
            android:text="Duration"
            android:fontFamily="serif-monospace"
            android:background="#FFF59D"
            android:textStyle="bold"
            android:onClick="timeFilter"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/filterPriority"
            android:text="Priority"
            android:fontFamily="serif-monospace"
            android:background="#FFF59D"
            android:textStyle="bold"
            android:onClick="priorityFilter"
            android:layout_marginBottom="4dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/filterTags"
            android:text="Tags"
            android:fontFamily="serif-monospace"
            android:background="#FFF59D"
            android:textStyle="bold"
            android:onClick="tagsFilter"
            />



    </LinearLayout>




</RelativeLayout>
